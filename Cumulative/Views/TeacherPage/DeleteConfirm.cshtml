@* Cumulative/Views/TeacherPage/DeleteConfirm.cshtml *@
@model Cumulative.Models.Teacher

@{
    ViewData["Title"] = "Confirm Deletion";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h3>Are you sure you want to delete this teacher?</h3>
<p class="text-danger">This action cannot be undone. Associated courses will have their teacher assignment removed (set to NULL).</p>

<div>
    <h4>@Model.teacherfname @Model.teacherlname</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Teacher ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.teacherid)</dd>
        <dt class="col-sm-3">Employee Number</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.employeenumber)</dd>
        @* Add other relevant fields if desired *@
    </dl>

    @* Form posts to the Delete action for this ID *@
    <form asp-action="Delete" asp-controller="TeacherPage" asp-route-id="@Model.teacherid" method="post">
        @Html.AntiForgeryToken() @* CSRF token *@
        <input type="submit" value="Delete Teacher" class="btn btn-danger" /> |
        <a asp-action="FindSelectedTeacher" asp-route-id="@Model.teacherid" class="btn btn-secondary">Cancel</a>
        <a asp-action="ListTeachers" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>