@model IEnumerable<Cumulative.Models.Teacher>

<h2>Teacher List</h2>

<form method="get" asp-action="ListTeachers">
    <div class="form-group">
        <input type="text" name="SearchKey" class="form-control" placeholder="Search by name..." value="SearchKey" />
    </div>
    <button type="submit" class="btn btn-primary mb-3">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Employee Number</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.teacherfname @teacher.teacherlname</td>
                <td>@teacher.employeenumber</td>
                <td>@teacher.hiredate?.ToString("yyyy-MM-dd")</td>
                <td>@teacher.salary.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="FindSelectedTeacher" asp-route-id="@teacher.teacherid">ShowTeacher</a>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteConfirm" asp-route-id="@teacher.teacherid">DeleteTeacher</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="New">Add New Teacher</a>
