@model Cumulative.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<h2>Delete Teacher</h2>

<h3>Are you sure you want to delete this teacher?</h3>
<div>
    <h4>Teacher Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.teacherfname
        </dd>

        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.teacherlname
        </dd>

        <dt class="col-sm-2">
            Employee Number
        </dt>
        <dd class="col-sm-10">
            @Model.employeenumber
        </dd>

        <dt class="col-sm-2">
            Hire Date
        </dt>
        <dd class="col-sm-10">
            @Model.hiredate?.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            $@Model.salary.ToString("F2")
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="teacherid" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListTeachers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
