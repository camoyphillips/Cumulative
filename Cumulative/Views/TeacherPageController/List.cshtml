@model IEnumerable<Cumulative.Models.Teacher>

@{
    ViewData["Title"] = "Teacher List";
}

<h2>Teacher List</h2>

<form method="get" action="@Url.Action("Index", "TeacherPage")">
    <input type="text" name="SearchKey" placeholder="Search by name" value="@Context.Request.Query["SearchKey"]" />
    <button type="submit">Search</button>
</form>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hire Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherID</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@(teacher.HireDate.HasValue ? teacher.HireDate.Value.ToString("yyyy-MM-dd") : "")</td>
                <td>
                    <a href="@Url.Action("Details", "TeacherPage", new { id = teacher.TeacherID })">Details</a> |
                    <a href="@Url.Action("Edit", "TeacherPage", new { id = teacher.TeacherID })">Edit</a> |
                    <a href="@Url.Action("Delete", "TeacherPage", new { id = teacher.TeacherID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "TeacherPage")">Add New Teacher</a>
