@model Cumulative.Models.Teacher

<h1>Teacher Details</h1>

<div>
    <strong>Teacher ID:</strong> @Model.TeacherID
</div>
<div>
    <strong>First Name:</strong> @Model.FirstName
</div>
<div>
    <strong>Last Name:</strong> @Model.LastName
</div>
<div>
    <strong>Hire Date:</strong>
    @if (Model.HireDate.HasValue)
    {
        @Model.HireDate.Value.ToString("MM/dd/yyyy")
    }
    else
    {
        <span>No hire date available</span>
    }
</div>
<div>
    <strong>Salary:</strong> @Model.Salary
</div>
