@model Cumulative.Models.Student

<h1>Student Details</h1>

<div>
    <strong>Student ID:</strong> @Model.StudentID // Corrected to StudentID
</div>
<div>
    <strong>First Name:</strong> @Model.FirstName
</div>
<div>
    <strong>Last Name:</strong> @Model.LastName
</div>
<div>
    <strong>Student Number:</strong> @Model.StudentNumber
</div>
<div>
    <strong>Enrollment Date:</strong>
    @if (Model.EnrollmentDate != DateTime.MinValue)
    {
        @Model.EnrollmentDate.ToString("MM/dd/yyyy")
    }
    else
    {
        <span>No enrollment date available</span>
    }
</div>