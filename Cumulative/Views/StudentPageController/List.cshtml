@model IEnumerable<Cumulative.Models.Student>

<h1>Student List</h1>

<form method="get" action="@Url.Action("Index", "StudentPage")">
    <input type="text" name="SearchKey" placeholder="Search by name" value="@Context.Request.Query["SearchKey"]" />
    <button type="submit">Search</button>
</form>

<table border="1">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td> <!-- Ensure StudentID is correct -->
                <td>@student.FirstName</td> <!-- Ensure FirstName is correct -->
                <td>@student.LastName</td> <!-- Ensure LastName is correct -->
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "StudentPage")">Add New Student</a>
