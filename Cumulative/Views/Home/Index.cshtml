@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>School Management System</p>
</div>

<!-- Search Bar Section -->
<div class="text-center mt-4">
    <!-- Redirects to Swagger UI when the search form is submitted -->
    <form method="get" onsubmit="window.location.href='/swagger'; return false;" class="form-inline justify-content-center">
        <div class="form-group mb-2">
            <input type="text" name="index" class="form-control" placeholder="Search (goes to Swagger UI)..." />
        </div>
        <button type="submit" class="btn btn-primary mb-2 ml-2">SearchAPI</button>
    </form>
</div>
