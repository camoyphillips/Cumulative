@* Cumulative/Views/Shared/Error.cshtml or Cumulative/Views/TeacherPage/Error.cshtml *@
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (ViewBag.ErrorMessage != null)
{
    <p><strong>Details:</strong> <code class="text-danger">@ViewBag.ErrorMessage</code></p>
}

@* Example:
@model ErrorViewModel
@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
*@

<p>
    Please try again later or contact support if the problem persists.
</p>
<a asp-action="ListTeachers" asp-controller="TeacherPage" class="btn btn-primary">Back to Teacher List</a>